# Path
export PATH="/opt/homebrew/bin:$PATH"

# Basic aliases
alias ll='ls -lah'
alias ..='cd ..'
alias ...='cd ../..'

# Useful functions
mkcd() {
  mkdir -p "$1" && cd "$1"
}

# Quick navigation
alias dev='cd ~/Developer'
alias proj='cd ~/Developer/projects'

# Load Oh My Zsh (will be installed by run_once script)
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="robbyrussell"
plugins=(git)
source $ZSH/oh-my-zsh.sh
