[user]
  name = {{ .name }}
  email = {{ .email }}

[init]
  defaultBranch = main

[pull]
  rebase = true

[rebase]
  autoStash = true

[core]
  editor = nvim

[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  unstage = reset HEAD --
  last = log -1 HEAD
  lg = log --graph --oneline --decorate --all
  amend = commit --amend --no-edit
  undo = reset --soft HEAD~1
  aliases = config --get-regexp alias
  sw = switch
  swc = switch -c
  rbc = rebase --continue
  rs = restore
